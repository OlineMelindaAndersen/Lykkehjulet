<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wheel"
    tools:context=".LostScreen">

    <Button
        android:id="@+id/play_again"
        android:layout_width="147dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="@string/play_again"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lost_message"
        app:layout_constraintVertical_bias="0.716" />

    <TextView
        android:id="@+id/lost_message"
        android:layout_width="275dp"
        android:layout_height="121dp"
        android:layout_marginTop="252dp"
        android:background="#9C6200EE"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/lost_message"
        android:textColor="#FBF8F9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>